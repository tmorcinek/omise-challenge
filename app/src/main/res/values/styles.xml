<resources>

    <style name="ItemTitle">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">@dimen/font_big</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="StandardCardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/half_margin</item>
        <item name="android:layout_marginBottom">@dimen/half_margin</item>
        <item name="android:layout_marginStart">@dimen/margin</item>
        <item name="android:layout_marginEnd">@dimen/margin</item>
        <item name="android:foreground">@drawable/ripple_accent</item>
    </style>
</resources>
